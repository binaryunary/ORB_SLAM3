{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "catkin build --profile debug",
      "problemMatcher": [
        "$catkin-gcc"
      ],
      "label": "catkin: build (Debug)",
      "group": "build"
    },
    {
      "type": "shell",
      "command": "catkin build --profile release",
      "problemMatcher": [
        "$catkin-gcc"
      ],
      "label": "catkin_build_release",
    },
    {
      "command": "${workspaceFolder}/merge_compile_commands.sh",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "catkin: build (Release)",
      "dependsOn": [
        "catkin_build_release"
      ]
    },
    {
      "type": "shell",
      "command": "catkin clean --yes",
      "problemMatcher": [
        "$catkin-gcc"
      ],
      "label": "catkin: clean"
    },
    {
      "label": "source_env",
      "type": "shell",
      "command": "source ${workspaceFolder}/devel_debug/setup.bash"
    }
  ]
}
