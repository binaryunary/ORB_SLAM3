{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      // "command": "source /opt/ros/melodic/setup.bash && catkin clean --profile release --yes && catkin build -j5 --profile release",
      "command": "source /opt/ros/melodic/setup.bash && catkin build -j5 --profile release",
      "problemMatcher": [
        "$catkin-gcc"
      ],
      "label": "catkin: build (Debug)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "type": "shell",
      "command": "catkin build --profile release",
      "problemMatcher": [
        "$catkin-gcc"
      ],
      "label": "catkin: build (Release)",
      "group": {
        "kind": "build",
      }
    },
    {
      "type": "shell",
      "command": "catkin clean --profile release --yes",
      "problemMatcher": [
        "$catkin-gcc"
      ],
      "label": "catkin: clean"
    },
    {
      "label": "source_env",
      "type": "shell",
      "command": "source ${workspaceFolder}/devel_release/setup.bash",
    }
  ]
}
